{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",
		"baseUrl": ".",
		"target": "ESNext",
		"lib": ["dom", "esnext"],
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"*" : ["node_modules/*"]
		},
        "moduleResolution": "node"
	},
	"include": [
		"src/main/**/*.ts"
	]
}